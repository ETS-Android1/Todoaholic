<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <EditTextPreference
            android:icon="@drawable/ic_baseline_account_circle_30"
            android:key="namesettings"
            app:key="signature"
            app:title="Your name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Appearence">

        <SwitchPreferenceCompat
            android:id="@+id/theme_settings"
            android:outlineAmbientShadowColor="@color/catpink"
            android:outlineSpotShadowColor="@color/hotpink"
            app:icon="@drawable/ic_baseline_brightness_2_24"
            app:key="darkmode"
            app:title="Dark mode" />

        <ListPreference
            app:defaultValue="false"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:icon="@drawable/ic_baseline_settings_applications_24"
            app:key="theme"
            app:title="Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>